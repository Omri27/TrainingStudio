<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg1"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context="zina_eliran.app.ProfileSettingsActivity">

    <include layout="@layout/app_header_icon"></include>

    <ProgressBar
        android:id="@+id/register_pbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="#FF6600"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="50dp">

    <LinearLayout
        android:id="@+id/register_register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/register_name_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#bbffffff"
            android:hint="Full Name"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#555555" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddFFA330" />

        <TextView
            android:id="@+id/register_email_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#bbffffff"
            android:hint="Email"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#555555" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddFFA330" />

        <EditText
            android:id="@+id/register_name_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:hint="Full Name"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textColorHint="#555555" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddFFA330" />

        <EditText
            android:id="@+id/register_email_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#555555" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddFFA330" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_email_et77"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:hint="Email"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#555555"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"/>


                <EditText
                    android:id="@+id/register_email_e7t"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:hint="Email"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="3dp"
                    android:textColorHint="#555555"
                    android:layout_weight="1"/>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddFFA330" />

        </LinearLayout>


    </LinearLayout>



    </ScrollView>

    <Button
        android:id="@+id/register_register_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/app_rect_buttons_shape"
        android:elevation="2dp"
        android:text="Register"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:textSize="17dp" />

</RelativeLayout>
