<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/training_list_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg2"
    android:gravity="center_vertical"
    tools:context="zina_eliran.app.TrainingsListActivity">

    <LinearLayout
        android:id="@+id/training_list_header_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/training_list_app_logo"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/app_logo" />

        <TextView
            android:id="@+id/training_list_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:text="# Trainings"
            android:textStyle="bold"
            android:textSize="27dp"
            android:textColor="#ffffff"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/training_list_delete_training_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:paddingTop="2dp"
            android:visibility="invisible"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/training_list_header_layout"
        android:background="#ffffff" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/training_list_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="58dp"
        android:scrollbars="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="17dp"
        android:src="@android:drawable/ic_input_add"
        android:visibility="visible"
        android:tint="#FF6600"
        app:borderWidth="0dp"
        android:scaleType="center"
        android:backgroundTint="#444444"
        app:elevation="12dp"
        app:pressedTranslationZ="15dp" />

</RelativeLayout>


